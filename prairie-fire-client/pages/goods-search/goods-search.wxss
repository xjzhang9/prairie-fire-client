/**
 * 商品列表
 */
 .scroll-box {
   height: calc(100vh - 80rpx);
 }
.data-list {
    overflow: hidden;
}
.data-list .items {
    width: calc(50% - 5rpx);
    margin-bottom: 10rpx;
    padding-bottom: 20rpx;
}
.data-list .items:nth-child(2n) {
    float: right;
}
.data-list .items:nth-child(2n+1) {
    float: left;
}

.data-list.items prescription_classification {
  float: right;
  background: green;
  margin-top: 0rpx;
}

.data-list .items .base {
    text-align: left;
    font-size: 32rpx;
    padding: 0 15rpx;
    height: 550rpx;
}

.spec {
 text-align: left;
  font-size: 25rpx;
  padding: 5rpx;
}
   

.data-list .items .base,
.data-list .items .base .price {
    margin-top: 15rpx;
}

.tx-right image {
  float: right;
  width: 30px;
  height: 20px;
  margin-bottom: 5rpx  !important;
}

.items-image {
    width: 100%;
    height: 300rpx; 
    margin-top: 10rpx;
}

.line-limit-length {
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}